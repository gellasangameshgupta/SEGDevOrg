<aura:component implements="flexipage:availableForAllPageTypes" controller="APTS_ItemsToApproveController">
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
<aura:attribute name="totalItems" type="Integer"/>
    <aura:attribute name="myApproveList" type="String"/>
    
<div style="background-color:white;border-radius: 5px;height: 181px;" class="mainDiv" >
    <div class=" aligncenter" style="padding-top: 5px;">
        <div class="tileHeader" style="margin-left: 7px;margin-right: 7px;">
        	<span>Items to Approve</span>
        </div>
    	
    </div>
    
    <div class="aligncenter centerContent ">
        <a aura:id="NDA Wizard" class="HideLine" onclick="{!c.gotoList}">
            <span class="osOutputLabel" style="color: #54698d;">{!v.totalItems}</span>
        </a>
    
    </div>
    <div class="aligncenter ">
        <div class="tileFooter">
            <span> Approvals for your<br/>review</span>
            </div>
    </div>
   
   
    
</div>
</aura:component>